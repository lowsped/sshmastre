<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/h"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></RelativeLayout>

        <TextView
            android:text="TOOL SSH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/holo_red_dark" />

    <Button
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/button33"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="6dp"
        android:text="HOST TO IP"
        android:background="@drawable/button_background"
        android:textColor="@color/button_focused"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView1" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_below="@+id/button33"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/button30"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="6dp"
        android:text="POINTING SSH"
        android:background="@drawable/button_background"
        android:textColor="@color/button_focused"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/adView"
         />

    <Button
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/button32"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="6dp"
        android:text="IP TO DECIMAL"
        android:background="@drawable/button_background"
        android:textColor="@color/button_focused"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/button31"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:height="60dp"
        android:padding="6dp"
        android:text="MY IP ADRESS"
        android:background="@drawable/button_background"
        android:textColor="@color/button_focused"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/button32"
         />


</RelativeLayout>